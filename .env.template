# aMonitoringHub Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here-generate-with-python-secrets

# Logging Configuration (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=ERROR

# Gemini API for OCR (required for meter reading)
GEMINI_API_KEY=your-gemini-api-key-here

# Database Configuration (optional - defaults to sqlite:///monitoringhub.db)
# DATABASE_URL=sqlite:///monitoringhub.db

# Server Configuration (optional - for production deployment)
# FLASK_HOST=0.0.0.0
# FLASK_PORT=5000
