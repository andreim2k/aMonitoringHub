# aMonitoringHub Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Flask Secret Key (REQUIRED)
# Generate a secure key with: python3 -c 'import secrets; print(secrets.token_hex(32))'
FLASK_SECRET_KEY=your-secret-key-here-generate-with-python-secrets

# Gemini API Key (REQUIRED for OCR functionality)
# Get your API key from: https://ai.google.dev/
# IMPORTANT: Rotate this key if it was ever exposed in git history
GEMINI_API_KEY=your-gemini-api-key-here

# Allowed CORS Origins (OPTIONAL)
# Comma-separated list of allowed origins for CORS
# Default: http://localhost:5000 (for development)
# Example: http://localhost:5000,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:5000

# Log Level (OPTIONAL)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: ERROR
LOG_LEVEL=ERROR
